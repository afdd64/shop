/* pages/payment/payment.wxss */
.custom-nav {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.back-btn {
  font-size: 50rpx;
  margin-right: 30rpx;
}

.address-card {
  background: #fff;
  margin: 30rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.address-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.name {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.phone {
  color: #666;
}

.default-tag {
  background: #ffeeee;
  color: #e4393c;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.add-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.add-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.payment-methods {
  background: #fff;
  margin: 0 30rpx;
  border-radius: 16rpx;
}

.method-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.method-left {
  display: flex;
  align-items: center;
}

.method-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.method-desc {
  color: #999;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.payment-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
}

.total-amount {
  color: #e4393c;
  font-size: 36rpx;
}

.pay-btn {
  background: linear-gradient(90deg, #e4393c, #ff6b6b);
  color: #fff;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}