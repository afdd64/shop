/* 容器样式 */
.container {
  padding: 20px;
  font-family: 'Helvetica Neue', Arial, sans-serif;
}

/* 页面标题样式 */
.page-title {
  font-size: 28px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20px;
  text-align: center;
}

/* 分类标题样式 */
.category-title {
  font-size: 20px;
  font-weight: bold;
  color: #555;
  margin-bottom: 10px;
}

/* 分类列表样式 */
.category-list {
  white-space: nowrap;
  margin-bottom: 30px;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

/* 分类项样式 */
.category-item {
  display: inline-block;
  padding: 12px 24px;
  margin-right: 15px;
  background-color: #e0f7fa;
  border-radius: 20px;
  color: #0097a7;
  font-weight: 600;
  transition: background-color 0.3s ease;
}

.category-item:hover {
  background-color: #b2ebf2;
}

/* 商品标题样式 */
.product-title {
  font-size: 20px;
  font-weight: bold;
  color: #555;
  margin-bottom: 10px;
}

/* 商品列表样式 */
.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 商品项样式 */
.product-item {
  width: 48%;
  margin-bottom: 30px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.product-item:hover {
  transform: translateY(-5px);
}

/* 商品图片样式 */
.product-item image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

/* 商品名称样式 */
.product-name {
  display: block;
  margin-top: 10px;
  padding: 0 15px;
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

/* 商品价格样式 */
.product-price {
  display: block;
  margin-top: 5px;
  padding: 0 15px;
  font-size: 18px;
  font-weight: bold;
  color: #e53935;
  margin-bottom: 15px;
}