.container {
  padding-bottom: 120rpx;
}

.swiper {
  height: 750rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 30rpx;
  background-color: #fff;
}

.price-section {
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 48rpx;
  color: #e4393c;
  margin-right: 20rpx;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.title {
  font-size: 36rpx;
  color: #333;
  margin: 20rpx 0;
  display: block;
  font-weight: bold;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.1);
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 10rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
}

.cart-btn {
  background-color: #ffd54f;
  color: #333;
}

.buy-btn {
  background-color: #e4393c;
  color: #fff;
}